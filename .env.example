# Quail Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
# Default database connection string (optional - for demo/test database)
NEXT_PUBLIC_DEFAULT_DB_CONNECTION_STRING=

# Encryption Key (REQUIRED)
# Generate a secure 32-character key for encrypting user data
# Example: openssl rand -base64 32
NEXT_PUBLIC_ENCRYPTION_KEY=

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# MongoDB Configuration
MONGODB_URI=

# Azure AI Configuration (optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Stripe Configuration (optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
