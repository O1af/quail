{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/_next/*",
      "/static/*",
      "/images/*",
      "/api/*",
      "/*.{png,jpg,gif,ico,svg}",
      "/.swa/*"
    ]
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/.swa/*",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/404"
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.quail.io https://*.supabase.co https://*.azure.com; img-src 'self' data: blob: https://*.quail.io https://*.cloudfront.net;",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  }
}
